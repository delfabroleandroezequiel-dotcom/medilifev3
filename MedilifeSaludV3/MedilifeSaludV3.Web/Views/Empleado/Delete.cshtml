@model MedilifeSaludV3.Web.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Eliminar Empleado</h2>
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver</a>
    </div>

    <div class="alert alert-warning">¿Seguro que querés eliminar este empleado?</div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Razón Social</dt>
                <dd class="col-sm-9">@Model.RazonSocial</dd>
                <dt class="col-sm-3">CUIL</dt>
                <dd class="col-sm-9">@Model.Cuil</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>
