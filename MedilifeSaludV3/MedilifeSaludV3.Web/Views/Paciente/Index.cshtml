@model IEnumerable<MedilifeSaludV3.Web.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
    var q = (ViewBag.Q as string) ?? "";
}

<div class="container-fluid mt-4">

    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h2 class="mb-0">Pacientes</h2>

        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-lg"></i> Nuevo
            </a>

            <a class="btn btn-outline-success"
               asp-action="ExportExcel"
               asp-route-q="@q">
                <i class="bi bi-file-earmark-excel"></i> Exportar
            </a>

            <button id="btnToggleAudit" type="button" class="btn btn-outline-secondary">
                <i class="bi bi-eye"></i> Más datos
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tblPacientes" class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Apellido</th>
                            <th>Nombre</th>

                            <th class="col-audit">Creado</th>
                            <th class="col-audit">Modificado</th>

                            <th class="text-end" style="width: 240px;"></th>
                        </tr>
                        <tr>
                            <th><input class="form-control form-control-sm dt-col-filter" data-col="0" placeholder="Filtrar..." /></th>
                            <th><input class="form-control form-control-sm dt-col-filter" data-col="1" placeholder="Filtrar..." /></th>
                            <th class="col-audit"></th>
                            <th class="col-audit"></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Apellido</td>
                                <td>@item.Nombre</td>
                                <td class="col-audit">
                                    <small class="text-muted">
                                        @item.Creado.ToString("dd/MM/yyyy HH:mm")<br />
                                        @item.CreadoPor
                                    </small>
                                </td>
                                <td class="col-audit">
                                    <small class="text-muted">
                                        @(item.Modificado.HasValue ? item.Modificado.Value.ToString("dd/MM/yyyy HH:mm") : "")<br />
                                        @item.ModificadoPor
                                    </small>
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(function () {
            var table = $('#tblPacientes').DataTable({
                orderCellsTop: true,
                fixedHeader: false,
                pageLength: 25,
                lengthChange: true,
                searching: true,
                dom: "<'row mb-2'<'col-12'tr>>" +
                    "<'row mt-2'<'col-md-5'i><'col-md-7'p>>",
                ordering: true,
                info: true,
                autoWidth: false,
                columnDefs: [
                    { orderable: false, targets: [4] },
                    { searchable: false, targets: [4] },
                    { visible: false, targets: [2, 3] }
                ],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.8/i18n/es-ES.json"
                }
            });

            $('#tblPacientes thead tr:eq(1) .dt-col-filter').each(function () {
                var el = $(this);
                var colIndex = parseInt(el.data('col'));
                el.on('keyup change clear', function () {
                    table.column(colIndex).search(this.value || "").draw();
                });
            });

            var auditVisible = false;
            $('#btnToggleAudit').on('click', function () {
                auditVisible = !auditVisible;
                table.column(2).visible(auditVisible);
                table.column(3).visible(auditVisible);
                $(this).html(auditVisible
                    ? '<i class="bi bi-eye-slash"></i> Ocultar datos'
                    : '<i class="bi bi-eye"></i> Más datos'
                );
            });
        });
    </script>
}
