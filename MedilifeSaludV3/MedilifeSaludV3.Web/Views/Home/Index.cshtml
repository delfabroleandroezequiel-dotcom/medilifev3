<style>
    .dashboard-tile {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 110px;
        background: #0d6efd;
        color: white;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        text-align: center;
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .dashboard-tile i {
            font-size: 28px;
            margin-bottom: 6px;
        }

        .dashboard-tile:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,0,0,.15);
            color: white;
        }

        .dashboard-tile.warning {
            background: #ffc107;
            color: #000;
        }

        .dashboard-tile.danger {
            background: #dc3545;
        }

        .dashboard-tile.primary {
            background: #198754;
        }

    .dashboard-tile {
        min-height: 90px; /* antes seguramente 130+ */
        padding: 12px 8px;
        font-size: 0.85rem;
    }

        .dashboard-tile i {
            font-size: 1.4rem; /* icono más chico */
            margin-bottom: 4px;
        }

        .dashboard-tile span {
            font-size: 0.75rem;
            line-height: 1.1;
        }

    .dashboard-tile {
        min-height: 80px; /* ↓ antes ~130/150 */
