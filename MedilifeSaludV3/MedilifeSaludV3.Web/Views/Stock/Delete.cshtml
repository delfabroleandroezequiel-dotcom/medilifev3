@model MedilifeSaludV3.Web.Models.Stock

@{
    ViewData["Title"] = "Eliminar Stock";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Eliminar Stock</h2>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div class="alert alert-warning">
        ¿Seguro que querés eliminar el Stock <strong>#@Model.Id</strong>?
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Estado</dt><dd class="col-sm-9">@Model.Estado</dd>
                <dt class="col-sm-3">Marca</dt><dd class="col-sm-9">@Model.Marca?.Marca</dd>
                <dt class="col-sm-3">Title</dt><dd class="col-sm-9">@Model.Title</dd>
                <dt class="col-sm-3">Modelo</dt><dd class="col-sm-9">@Model.Modelo?.Title</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>
