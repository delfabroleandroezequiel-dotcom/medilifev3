@model MedilifeSaludV3.Web.Models.MarcaStock

@{
    ViewData["Marca"] = "Eliminar Marca";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Eliminar Marca</h2>
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <p class="mb-3">¿Seguro que querés eliminar este registro?</p>
            <dl class="row mb-0">
                <dt class="col-sm-3">Tipo de material</dt>
                <dd class="col-sm-9">@Model.Marca</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
                <a class="btn btn-outline-secondary ms-2" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>
