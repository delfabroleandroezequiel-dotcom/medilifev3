@model MedilifeSaludV3.Web.Models.MarcaStock

@{
    ViewData["Marca"] = "Nuevo Marca";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Nuevo Marca</h2>
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Guardar</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
