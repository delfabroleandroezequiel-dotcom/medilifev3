@model MedilifeSaludV3.Web.Models.Institucion

@{
    ViewData["Title"] = "Detalle Institución";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Detalle Institución</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver</a>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil"></i> Editar</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">CUIL</dt>
                <dd class="col-sm-9">@Model.Cuil</dd>

                <dt class="col-sm-3">Teléfono</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Dirección</dt>
                <dd class="col-sm-9">@Model.Direccion</dd>

                <dt class="col-sm-3">Creado</dt>
                <dd class="col-sm-9">@Model.Creado.ToString("dd/MM/yyyy HH:mm") - @Model.CreadoPor</dd>

                <dt class="col-sm-3">Modificado</dt>
                <dd class="col-sm-9">@(Model.Modificado.HasValue ? Model.Modificado.Value.ToString("dd/MM/yyyy HH:mm") : "") - @Model.ModificadoPor</dd>
            </dl>
        </div>
    </div>
</div>
