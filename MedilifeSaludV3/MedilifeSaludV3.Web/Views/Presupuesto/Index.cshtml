@model IEnumerable<MedilifeSaludV3.Web.Models.Presupuesto>

@{
    ViewData["Title"] = "Presupuestos";
    var q = (ViewBag.Q as string) ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Presupuestos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nuevo
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <form method="get" class="row g-2 mb-3">
            <div class="col-md-6">
                <input name="q" value="@q" class="form-control" placeholder="Buscar por número, empresa, paciente u obra social..." />
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i> Buscar</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover" id="tblPresupuestos">
                <thead class="table-light">
                    <tr>
                        <th>N°</th>
                        <th>Fecha</th>
                        <th>Empresa</th>
                        <th>Paciente</th>
                        <th>Obra Social</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Numero</td>
                        <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@p.Empresa?.RazonSocial</td>
                        <td>@(p.Paciente != null ? (p.Paciente.Apellido + ", " + p.Paciente.Nombre) : "-")</td>
                        <td>@(p.Prestador?.Nombre ?? "-")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@p.Id" title="Ver">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Print" asp-route-id="@p.Id" target="_blank" title="Print">
                                <i class="bi bi-printer"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#tblPresupuestos').DataTable({
                paging: true,
                searching: false,
                info: true,
                order: [[1, 'desc']]
            });
        });
    </script>
}
