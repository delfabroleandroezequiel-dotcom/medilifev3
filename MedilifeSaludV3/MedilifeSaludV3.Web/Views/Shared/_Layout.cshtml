<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEDILIFE SALUD (V3)</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
</head>

<body class="sidebar-collapsed">
    <!-- Topbar -->
    <header class="topbar-modern">
        <div class="container-fluid d-flex align-items-center justify-content-between px-3 border-bottom bg-light" style="lightblue!important">

            <div class="d-flex align-items-center gap-2">
                <button id="btnSidebarToggle"
                        class="btn btn-icon"
                        type="button"
                        title="Menú">
                    <i class="bi bi-list"></i>
                </button>

            </div>

            <div class="topbar-right d-flex align-items-center gap-2">
                <i class="bi bi-person-circle fs-5"></i>

                <div class="text-end lh-sm">
                    <div class="fw-semibold">
                        @User.FindFirst("name")?.Value
                    </div>
                </div>
            </div>

        </div>
    </header>

    <!-- Layout: Sidebar + Content -->
    <div class="app-shell">
        <aside id="sidebar" class="sidebar border-end bg-light">
            <nav class="nav flex-column py-2">

                <a class="nav-link d-flex align-items-center gap-2 px-3 py-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door"></i>
                    <span class="nav-text">Home</span>
                </a>

                <a class="nav-link d-flex align-items-center gap-2 px-3 py-2" asp-controller="Presupuesto" asp-action="Index">
                    <i class="bi bi-file-earmark-text"></i>
                    <span class="nav-text">Presupuestos</span>
                </a>

                <!-- Grupo: Configuración -->
                <a class="nav-link d-flex align-items-center gap-2 px-3 py-2" data-bs-toggle="collapse" href="#navConfig" role="button" aria-expanded="false" aria-controls="navConfig">
                    <i class="bi bi-gear"></i>
                    <span class="nav-text">Configuración</span>
                    <span class="ms-auto nav-text"><i class="bi bi-chevron-down"></i></span>
                </a>

                <div class="collapse" id="navConfig">
                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="ObraSocial" asp-action="Index">
                        <i class="bi bi-shield-check"></i>
                        <span class="nav-text">Obras Sociales</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="Medico" asp-action="Index">
                        <i class="bi bi-heart-pulse"></i>
                        <span class="nav-text">Médicos</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="Paciente" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span class="nav-text">Pacientes</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="Institucion" asp-action="Index">
                        <i class="bi bi-building"></i>
                        <span class="nav-text">Instituciones</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="Empleado" asp-action="Index">
                        <i class="bi bi-person-badge"></i>
                        <span class="nav-text">Empleados</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="TipoMaterial" asp-action="Index">
                        <i class="bi bi-box"></i>
                        <span class="nav-text">Tipos de Material</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="Modelo" asp-action="Index">
                        <i class="bi bi-diagram-3"></i>
                        <span class="nav-text">Modelos</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="TipoFactura" asp-action="Index">
                        <i class="bi bi-receipt"></i>
                        <span class="nav-text">Tipos de Factura</span>
                    </a>

                    <a class="nav-link d-flex align-items-center gap-2 px-3 py-2 ms-3" asp-controller="Marca" asp-action="Index">
                        <i class="bi bi-tag"></i>
                        <span class="nav-text">Marcas</span>
                    </a>
                </div>

            </nav>
        </aside>

        <main class="content">
            <div class="container-fluid py-3">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
          const key = 'ml_sidebar_collapsed';
          const btn = document.getElementById('btnSidebarToggle');

          // Por defecto: colapsado (ya lo da la clase del body)
          // Si el usuario guardó expandido, lo sacamos
          if (localStorage.getItem(key) === '0') {
            document.body.classList.remove('sidebar-collapsed');
          }

          btn.addEventListener('click', function () {
            document.body.classList.toggle('sidebar-collapsed');
            localStorage.setItem(key, document.body.classList.contains('sidebar-collapsed') ? '1' : '0');
          });
        })();
    </script>

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>